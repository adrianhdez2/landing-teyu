---
import ContainerSection from "@components/shared/ContainerSection.astro";
---

<ContainerSection id="contact">
    <div class="mb-12 w-full text-center">
        <h2 class="text-xl mb-4">Contacto</h2>
        <p class="text-sm">
            ¿Tienes preguntas o necesitas más información? ¡Contáctanos!
        </p>
    </div>
    <div class="w-full md:w-1/2">
        <form class="space-y-6" id="contact-form">
            <div>
                <label for="email" class="block text-sm/6 font-medium"
                    >Nombre completo:</label
                >
                <div class="mt-2">
                    <input
                        id="name"
                        name="name"
                        type="text"
                        autocomplete="name"
                        required
                        placeholder="Escribe tu nombre completo.."
                        aria-label="Correo electrónico"
                        class="block px-2 w-full rounded-md border border-transparent py-1.5 shadow-sm bg-[#252525] placeholder:text-white/20 sm:text-sm/6 focus-visible:border-gray-500 outline-none"
                    />
                </div>
            </div>

            <div>
                <label for="email" class="block text-sm/6 font-medium"
                    >Correo electrónico:</label
                >
                <div class="mt-2">
                    <input
                        id="email"
                        name="email"
                        type="email"
                        autocomplete="email"
                        required
                        placeholder="Escribe tu correo..."
                        aria-label="Correo electrónico"
                        class="block px-2 w-full rounded-md border border-transparent py-1.5 shadow-sm bg-[#252525] placeholder:text-white/20 sm:text-sm/6 focus-visible:border-gray-500 outline-none"
                    />
                </div>
            </div>

            <div>
                <div class="flex items-center justify-between">
                    <label for="phone" class="block text-sm/6 font-medium"
                        >Teléfono:</label
                    >
                </div>
                <div class="mt-2">
                    <input
                        id="phone"
                        name="phone"
                        type="tel"
                        autocomplete="current-phone"
                        required
                        placeholder="Escribe tu teléfono..."
                        aria-label="Teléfono"
                        class="block px-2 w-full rounded-md border border-transparent py-1.5 shadow-sm bg-[#252525] placeholder:text-white/20 sm:text-sm/6 focus-visible:border-gray-500 outline-none"
                    />
                </div>
            </div>
            <div>
                <div class="flex items-center justify-between">
                    <label for="phone" class="block text-sm/6 font-medium"
                        >Mensaje:</label
                    >
                </div>
                <div class="mt-2">
                    <textarea
                        name="message"
                        id="message"
                        class="block w-full rounded-md border border-transparent py-1.5 shadow-sm bg-[#252525] placeholder:text-white/20 sm:text-sm/6 focus-visible:border-gray-500 outline-none resize-none min-h-36 max-h-36 px-2"
                        placeholder="Déjanos saber tu consulta..."
                        required
                        cols="30"></textarea>
                </div>
            </div>

            <div>
                <button
                    type="submit"
                    class="flex w-full justify-center rounded-md px-3 py-2 text-sm/6 font-semibold shadow-sm bg-transparent border border-white hover:bg-white hover:text-black transition duration-300"
                    >Contactar</button
                >
            </div>
        </form>
    </div>
</ContainerSection>

<script src="../utils/form.ts"></script>
