---
import MenuRightIcon from "@components/icons/MenuRightIcon.astro";
import Menu from "@components/Menu.astro";
---

<header
    class="max-w-5xl w-11/12 mx-auto px-2 py-2 flex items-center justify-between sticky top-2 mb-2 z-20 bg-white/10 backdrop-blur-xl rounded-full"
>
    <a href="/"><img src="/teyu-logo.png" alt="" class="size-8" /></a>
    <nav>
        <ul class="hidden space-x-10 md:flex [&>li]:text-sm">
            <li><a href="#home" class="hover:underline">Inicio</a></li>
            <li>
                <a href="#colaborations" class="hover:underline"
                    >Colaboraciones</a
                >
            </li>
            <li><a href="#team" class="hover:underline">Equipo</a></li>
            <li><a href="#faq" class="hover:underline">FAQ</a></li>
            <li>
                <a
                    href="#contact"
                    class="bg-white/80 transition duration-300 hover:bg-white text-black px-3 py-2 rounded-3xl"
                    >Contactar</a
                >
            </li>
        </ul>
    </nav>
    <div class="flex md:hidden space-x-3">
        <a
            href="#contact"
            class="border border-white/10 text-xs transition duration-300 text-white active:bg-white/10 hover:bg-white/10 px-5 py-2 rounded-3xl"
            id="btn_contact">Contactar</a
        >
        <button
            type="button"
            class="text-white active:bg-white/10 transition duration-300 hover:bg-white/10 p-2 rounded-3xl border border-white/10"
            title="Abrir menÃº"
            id="open-menu"
        >
            <MenuRightIcon class="size-4" />
        </button>
    </div>
</header>

<Menu />

<script is:inline defer type="module" src="/js/menu.js"></script>
